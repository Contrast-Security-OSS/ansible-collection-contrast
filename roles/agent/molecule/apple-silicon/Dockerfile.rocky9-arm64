FROM rockylinux:9

# Install base packages (handle curl conflicts)
RUN dnf update -y && dnf install -y --allowerasing \
    python3 \
    python3-pip \
    sudo \
    systemd \
    procps-ng \
    curl \
    wget \
    ca-certificates \
    java-11-openjdk-devel \
    && dnf clean all

# Configure systemd
RUN systemctl set-default multi-user.target

# Remove systemd 'wants' to avoid unnecessary services
RUN find /etc/systemd/system \
    /lib/systemd/system \
    -path '*.wants/*' \
    -not -name '*journal*' \
    -not -name '*systemd-tmpfiles*' \
    -not -name '*systemd-user-sessions*' \
    -delete

# Start systemd
ENTRYPOINT ["/sbin/init"]
