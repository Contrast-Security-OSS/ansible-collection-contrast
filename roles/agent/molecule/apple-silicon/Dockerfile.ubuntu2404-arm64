FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

# Install base packages (handle PEP 668 for Ubuntu 24.04+)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    python3-full \
    python3-apt \
    sudo \
    systemd \
    systemd-sysv \
    procps \
    curl \
    wget \
    ca-certificates \
    openjdk-11-jdk \
    && rm -rf /var/lib/apt/lists/* \
    && ln -sf /usr/bin/python3 /usr/bin/python

# Configure systemd
RUN systemctl set-default multi-user.target

# Remove systemd 'wants' to avoid unnecessary services
RUN find /etc/systemd/system \
    /lib/systemd/system \
    -path '*.wants/*' \
    -not -name '*journal*' \
    -not -name '*systemd-tmpfiles*' \
    -not -name '*systemd-user-sessions*' \
    -delete

# Start systemd
ENTRYPOINT ["/sbin/init"]
